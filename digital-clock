  <script>
    (function backspaceClock() {
      const tz = 'Africa/Cairo';

      const elH = document.getElementById('backspace-h');
      const elM = document.getElementById('backspace-m');
      const elS = document.getElementById('backspace-s');
      const elA = document.getElementById('backspace-ampm');
      const elG = document.getElementById('backspace-greg');
      const elI = document.getElementById('backspace-hijri');
      const elT = document.getElementById('backspace-tz');

      elT.textContent = tz;

      const pad = (n) => String(n).padStart(2, '0');

      // تنسيقات التاريخ
      const gregOpts = { timeZone: tz, weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' };
      const hijriOpts = { timeZone: tz, weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' };

      // محاولات دعم الهجري عبر Intl
      function formatHijri(d) {
        try {
          // بعض المتصفحات تتطلب تحديد اللغة + التقويم معاً
          return new Intl.DateTimeFormat('ar-EG-u-ca-islamic', hijriOpts).format(d);
        } catch (e) {
          try {
            return new Intl.DateTimeFormat('ar-SA-u-ca-islamic', hijriOpts).format(d);
          } catch (e2) {
            return 'التقويم الهجري غير مدعوم في هذا المتصفح';
          }
        }
      }

      function tick() {
        const now = new Date();

        // استخراج الوقت بدقة في القاهرة بدون تحويل يدوي
        const parts = new Intl.DateTimeFormat('en-GB', {
          timeZone: tz,
          hour12: false,
          hour: '2-digit',
          minute: '2-digit',
          second: '2-digit'
        }).formatToParts(now).reduce((acc, p) => (acc[p.type] = p.value, acc), {});

        let hh = parseInt(parts.hour, 10);
        const mm = parts.minute;
        const ss = parts.second;

        const isPM = hh >= 12;
        const ampm = isPM ? 'م' : 'ص';
        hh = hh % 12; if (hh === 0) hh = 12;

        elH.textContent = pad(hh);
        elM.textContent = mm;
        elS.textContent = ss;
        elA.textContent = ampm;

        // التاريخ الميلادي (عربي، بتوقيت مصر)
        elG.textContent = new Intl.DateTimeFormat('ar-EG', gregOpts).format(now);
        // التاريخ الهجري
        elI.textContent = formatHijri(now);
      }

      tick();
      // تحديث كل 250ms ليكون السلوك سلساً ويُظهر الثواني فوراً
      setInterval(tick, 250);
    })();
  </script>
</body>
